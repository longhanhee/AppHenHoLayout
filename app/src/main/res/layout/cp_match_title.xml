<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/couple_match_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:src="@drawable/icon_common_back"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="0"
        app:layout_constraintLeft_toLeftOf="0"
        app:layout_constraintTop_toTopOf="0" />

    <TextView
        android:id="@+id/couple_match_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="随机匹配"
        android:textColor="#F00000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="0"
        app:layout_constraintLeft_toLeftOf="0"
        app:layout_constraintTop_toTopOf="0" />

    <TextView
        android:id="@+id/couple_match_filter"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/match_filter_btn_bg"
        android:drawableLeft="@drawable/cp_match_filter"
        android:gravity="center"
        android:paddingLeft="@dimen/px5dp"
        android:paddingRight="@dimen/px6dp"
        android:text="筛选"
        android:textColor="@color/fw_white"
        android:textSize="@dimen/px12dp"
        app:layout_constraintBottom_toBottomOf="0"
        app:layout_constraintRight_toRightOf="0"
        app:layout_constraintTop_toTopOf="0" />
</androidx.constraintlayout.widget.ConstraintLayout>
