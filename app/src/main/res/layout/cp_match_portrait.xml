<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:paddingLeft="@dimen/px20dp"
    android:paddingTop="@dimen/px10dp"
    android:paddingRight="@dimen/px20dp"
    android:paddingBottom="@dimen/px10dp">

    <com.bitwalker.tagcloud.TagCloudView
        android:id="@+id/couple_match_portrait_tag_cloud"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:autoScrollMode="1"
        app:layout_constraintBottom_toBottomOf="0"
        app:layout_constraintTop_toTopOf="0"
        app:manualScroll="true"
        app:radiusPercent="0.79"
        app:scrollSpeed="3" />
</androidx.constraintlayout.widget.ConstraintLayout>
