<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/cp_match_bg"
        android:layout_width="168dp"
        android:layout_height="54dp"
        android:background="@drawable/cp_room_start_match_bg"
        app:layout_constraintBottom_toBottomOf="0"
        app:layout_constraintLeft_toLeftOf="0"
        app:layout_constraintRight_toRightOf="0"
        app:layout_constraintTop_toTopOf="0"
        app:layout_constraintVertical_bias="0" />

    <com.opensource.svgaplayer.SVGAImageView
        android:id="@+id/cp_start_match_tv"
        android:layout_width="@dimen/px168dp"
        android:layout_height="@dimen/px54dp"
        app:autoPlay="true"
        app:layout_constraintBottom_toBottomOf="@+id/cp_match_bg"
        app:layout_constraintLeft_toLeftOf="@+id/cp_match_bg"
        app:layout_constraintRight_toRightOf="@+id/cp_match_bg"
        app:layout_constraintTop_toTopOf="@+id/cp_match_bg" />

    <TextView
        android:id="@+id/cp_cancel_match_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="@string/cp_couple_cancel_match"
        android:textColor="@color/fw_white"
        android:textSize="15sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/cp_match_bg"
        app:layout_constraintLeft_toLeftOf="@+id/cp_match_bg"
        app:layout_constraintRight_toRightOf="@+id/cp_match_bg"
        app:layout_constraintTop_toTopOf="@+id/cp_match_bg" />

    <TextView
        android:id="@+id/limit_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="#ffffff"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="0"
        app:layout_constraintStart_toStartOf="0"
        app:layout_constraintTop_toBottomOf="@+id/cp_match_bg" />
</androidx.constraintlayout.widget.ConstraintLayout>
